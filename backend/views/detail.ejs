<div class="details">
    <span>
        <img src="<%= items.image %>" alt="clothing"/>
    </span>
</div>

<div class="row">
    <span>
       <h4><%= items.item %></h4>
        <%= items.price %>
        <%= items.color %>
        <%= items.description %>
        <%= items.quantity %>
    </span> 


    <div class="delete-button"></div>
     <form action='/shop/<%= items.id %>?_method=DELETE' method="POST">
        <input type="submit" value="DELETE"/>
     </form>
    </div>

   <div class="EDIT-button"></div>
     <form action='/shop/<%= items.id %>/edit'> 
        <input type="submit" value="EDIT"/>
     </form>
    </div>

</div> 
